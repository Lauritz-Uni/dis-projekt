    <h1>FILMTER</h1>
    <nav>
      <button onclick="showSection('home')">Filter</button>
      <button onclick="showSection('randomizer')">Randomizer</button>
      <button onclick="showSection('about')">About</button>
    </nav>
  </header>

  <main>
    <section id="home" class="active">
      <h3>Looking for something to watch?</h3>
      <div class="filter-box">
        <label for="genre">Genre</label>
        <input type="text" id="genre" placeholder="e.g. Horror, Action, Comedy">

        <label for="runtime"> Runtime </label>
        <input type="number" id="runtime" placeholder="0-1200 (minutes)">

        <label for="year">Release Year</label>
        <input type="number" id="year" placeholder="lowest val - highest val">

        <label for="score">Audience Score (Avg.)</label>
        <input type="number" id="score" placeholder="1-100">

        <button class="generate" onclick="generateFilms()">Generate Films!</button>
      </div>
      <div id="results" style="color:white; padding-top:1rem;"></div>
    </section>

    <section id="randomizer">
      <h3>Looking for a random suggestion?</h3>
      <button class="generate" onclick="generateRandomFilm()">Click to randomize!</button>
      <div id="randomResult" style="color:white; padding-top:1rem;"></div>
    </section>

    <section id="about">
      <h3>About FILMTER</h3>
